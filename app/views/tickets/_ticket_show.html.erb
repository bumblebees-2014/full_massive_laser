<div class="col col-12 p1">
      <div class="overflow-hidden bg-white border rounded">
        <div class="p2 bg-yellow">
          <h1 class="h2 m0">
            <span data-title><%= @ticket.title %></span>
            <%= render "tickets/ticket_status" %>
          </h1>
        </div>
        <div class="p1">
          <div class="clearfix">
            <div class="col col-4 p1">
              <%= image_tag "#{@ticket.user.avatar}", class: "circle ticket-img p3 left block" %>
            </div>
            <div data-ticket-btn class="col col-4 p1 center ticket-btn">
              <%= render "tickets/ticket_action_button" %>
            </div>
            <div data-professional-img-div class="col col-4 p1">
              <%= render "tickets/ticket_professional_img" %>
            </div>
          </div>
          <div class="clearfix">
            <div class="col col-12 p3">
              <%= @ticket.body %>
            </div>
          </div>
        </div>
      </div>
    </div>
