<div class="container">
  <div class="clearfix">
    <div class="col col-12 p1">
      <div class="overflow-hidden bg-white border rounded">
      	<div class="col-8 px2 mx-auto">
          <%= image_tag "helpful_logo.svg", class: "middle m3" %>
          <br>
          <br>
          <div>
            <% if current_user %>
            Signed in as <strong><%= current_user.name %></strong>!
            <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
            <button class="google-signin nav-block"><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %></button>
            <% end %>
          </div>
          <br>
          <br>
          <br>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
